{
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },

    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "outDir": "dist",
    "rootDir": ".",                    

    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,

    "types": ["node", "express", "jest"]
  },
  "include": ["src/**/*", "__tests__/**/*", "tests/**/*", "jest.config.ts"],
  "exclude": ["node_modules", "dist", "prisma/seed.ts"]
}
